<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MovieDetailsActivity">

        <!--ORIG image (UPPER)-->
        <ImageView
            android:id="@+id/orig"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/orig"
            app:layout_constraintBottom_toTopOf="@id/orig_GL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--BACK BTTN-->
        <TextView
            android:id="@+id/back_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:drawableStart="@drawable/back_arr"
            android:drawablePadding="8dp"
            android:text="@string/back"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/root_left_VGL"
            app:layout_constraintTop_toTopOf="parent" />


        <!--BG image-->
        <ImageView
            android:id="@+id/BG"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/orig_GL" />

        <!--AVENGERS-->
        <TextView
            android:id="@+id/movie_naming"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:breakStrategy="balanced"
            android:lines="2"
            android:text="@string/movie_name"
            android:textColor="#ECECEC"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/root_left_VGL"
            app:layout_constraintTop_toBottomOf="@id/orig_GL" />

        <!--GENRE-->
        <TextView
            android:id="@+id/genre_movie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/genre_string"
            android:textColor="#FF3466"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/root_left_VGL"
            app:layout_constraintTop_toBottomOf="@id/movie_naming" />


        <ImageView
            android:id="@+id/rect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:src="@drawable/r_rectangle"
            app:layout_constraintBottom_toTopOf="@id/orig_GL"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/movie_aging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/aging_string"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/rect"
            app:layout_constraintEnd_toEndOf="@id/rect"
            app:layout_constraintStart_toStartOf="@id/rect" />

        <!--STARS-->
        <RatingBar
            android:id="@+id/ratingBar_movie"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4"
            android:theme="@style/MyRatingBar"
            app:layout_constraintStart_toEndOf="@id/root_left_VGL"
            app:layout_constraintTop_toBottomOf="@id/genre_movie" />

        <TextView
            android:id="@+id/movie_reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/reviews_string"
            android:textColor="#6D6D80"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/ratingBar_movie"
            app:layout_constraintTop_toBottomOf="@id/genre_movie" />

        <TextView
            android:id="@+id/storyline_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/storyline"
            android:textColor="#ECECEC"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/root_left_VGL"
            app:layout_constraintTop_toBottomOf="@id/ratingBar_movie" />

        <TextView
            android:id="@+id/storyline_movie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:alpha="0.75"
            android:gravity="center_vertical"
            android:letterSpacing="0.04"
            android:lineSpacingExtra="4sp"
            android:paddingTop="10dp"
            android:text="@string/Story_talk"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/root_right_VGL"
            app:layout_constraintStart_toEndOf="@id/root_left_VGL"
            app:layout_constraintTop_toBottomOf="@id/storyline_txt" />

        <!--CAST TEXT-->
        <TextView
            android:id="@+id/cast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:lineSpacingExtra="8sp"
            android:paddingBottom="4dp"
            android:text="@string/cast"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/storyline_movie" />


